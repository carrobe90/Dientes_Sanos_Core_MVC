@page "/Presupuesto/Registro"
@model RegistroModel
@{
}
<div class="container p-4">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-sm-6 col-md-3">

            </div>
            <div class="col-xs-12 col-md-12">
                <div class="panel panel-primary">
                    <div class="panel-heading text-center">
                        @if (Model.MODEL_TRATAMIENTO.TRA_ID.Equals(0))
                        {
                            <h3 class="panel-title">Registro de Tratamiento</h3>
                        }
                        else
                        {
                    <h3 class="panel-title">Actualización de Tratamiento(S)</h3>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="card rounded">
                            <div class="card-header" id="headingOne">
                                <div id="header" class="bg-info rounded text-center">
                                    <h2 class="mb-0 t">
                                        @if (Model.MODEL_TRATAMIENTO.TRA_ID.Equals(0))
                                        {
                                            <button class="btn btn-block text-light" type="button">
                                                Ingreso de Información
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-block text-light" type="button">
                                                Actualización de Información
                                            </button>
                                        }

                                    </h2>
                                </div>
                            </div>
                            <div>
                                <div class="card-body">
                                    <div class="row">
                                      
                                        <div class="col-md-12 col-lg-12">
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label>Detalle Tratamiento:</label>
                                                    <input asp-for="MODEL_TRATAMIENTO.TRA_CONCEPTO" type="text" onkeydown="upperCaseInput(this)" placeholder="DETALLE TRATAMIENTO" class="form-control" autofocus />
                                                    <span asp-validation-for="MODEL_TRATAMIENTO.TRA_CONCEPTO" class="text-danger"></span>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>Valor Tratamiento:</label>
                                                    <input id="ValVal" asp-for="MODEL_TRATAMIENTO.TRA_VALOR" type="number" onchange="ValidadDsctoTrat('PorVal', 'ValVal', 'TotVal','DsctVal');" placeholder="VALOR TRAT." onkeypress="return SoloNumeros(event)" class="form-control" autofocus />
                                                    <span asp-validation-for="MODEL_TRATAMIENTO.TRA_VALOR" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                    <label>Porcentaje Tratamiento:</label>
                                                    <input id="PorVal" asp-for="MODEL_TRATAMIENTO.TRA_POR_DESC" type="number" onkeydown="ValidadDsctoTrat('PorVal', 'ValVal', 'TotVal','DsctVal');" placeholder="PORCENTAJE TRAT." onkeypress="return SoloNumeros(event)" class="form-control" autofocus />
                                                    <span asp-validation-for="MODEL_TRATAMIENTO.TRA_POR_DESC" class="text-danger"></span>
                                                </div>
                                                <div class="form-group col-md-6">
                                                    <label>Dscto. Tratamiento:</label>
                                                    <input id="DsctVal" asp-for="MODEL_TRATAMIENTO.TRA_DESC" type="number" readonly placeholder="DSCTO. TRAT." onkeypress="return SoloNumeros(event)" class="form-control" autofocus />
                                                    <span asp-validation-for="MODEL_TRATAMIENTO.TRA_DESC" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="form-row">
                                                <div class="form-group col-md-6">
                                                        <label>Total Tratamiento:</label>
                                                        <input id="TotVal" asp-for="MODEL_TRATAMIENTO.TRA_TOTAL" type="number" readonly placeholder="VALOR TRAT." onkeypress="return SoloNumeros(event)" class="form-control" autofocus />
                                                        <span asp-validation-for="MODEL_TRATAMIENTO.TRA_TOTAL" class="text-danger"></span>
                                                    </div>
                                                <div class="form-group col-md-6">
                                                    @if (!Model.MODEL_TRATAMIENTO.TRA_ID.Equals(0))
                                                    {
                                                        <label>Estado Tratamiento:</label>
                                                        <input asp-for="MODEL_TRATAMIENTO.TRA_ESTADO" type="text" readonly placeholder="ESTADO TRATAMIENTO" class="form-control" />
                                                    }
                                                    else
                                                    {
                                                        <label>Estado Tratamiento:</label>
                                                        <input asp-for="MODEL_TRATAMIENTO.TRA_ESTADO" type="text" readonly value="V" class="form-control" />
                                                    }
                                                    <span asp-validation-for="MODEL_TRATAMIENTO.TRA_ESTADO" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="text-center form-group col-md-4 ">
                                            </div>
                                            <div class="text-center form-group col-md-4 ">
                                                @if (Model.MODEL_TRATAMIENTO.TRA_ID.Equals(0))
                                                {
                                                    <button type="submit" class="btn bg-info btn-block text-light">Registro</button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn bg-info btn-block text-light">Actualizar</button>
                                                }
                                            </div>
                                            <div class="form-group">
                                            </div>
                                            <div class="text-center form-group col-md-12 ">
                                                <label class="text-danger">@Html.DisplayFor(m => m.MODEL_TRATAMIENTO.ErrorMessage)  </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial">
}
