@page "Presupuesto/Reporte"
@model ReporteModel
@{
    var name = $"{Model.MODEL_PRESUPUESTO.DataPresupuesto.PRE_NOM_PAC}";
}

<div class="container">
    <h1>@name</h1>
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <h5>Reportes de pagos</h5>
                </div>
                <div class="card-body">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            <a class="nav-item nav-link active" data-toggle="tab" href="#nav-fee" role="tab" aria-selected="true">Cuotas</a>

                            <a class="nav-item nav-link" data-toggle="tab" href="#nav-interests" role="tab" aria-selected="false">Intereses</a>

                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-fee" role="tabpanel">
                            <div class="col-md-10">
                                <div class="row">
                                    <p>Deuda: </p>
                                    &nbsp;
                                    <p> @Model.MODEL_PRESUPUESTO.PRE_NOM_PAC</p>
                                </div>
                                <div class="row">
                                    <p>Pago: </p>
                                    &nbsp;
                                    <p> @Model.MODEL_PRESUPUESTO.PRE_NOM_PAC</p>
                                </div>
                                <div class="row">
                                    <p>Cuotas por mes: </p>
                                    &nbsp;
                                    <p> @Model.MODEL_PRESUPUESTO.PRE_NOM_PAC</p>
                                </div>
                                <div class="row">
                                    <p>Fecha del pago: </p>
                                    &nbsp;
                                    <p>@Model.MODEL_PRESUPUESTO.DataPresupuesto.PRE_ELA_ACT.ToString("dd/MMM/yyy")</p>
                                </div>
                                <div class="row">
                                    <p>Ticket: </p>
                                    &nbsp;
                                    <p> @Model.MODEL_PRESUPUESTO.PRE_NOM_PAC</p>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="nav-interests" role="tabpanel">


                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="row">
                            <form asp-area="Presupuesto" asp-page="Reporte" method="post">
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" id="inlineRadio1" asp-for="MODEL_PRESUPUESTO.RadioOptions" value="1">
                                    <label class="form-check-label" for="inlineRadio1">Cuotas</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input type="radio" class="form-check-input" id="inlineRadio2" asp-for="MODEL_PRESUPUESTO.RadioOptions" value="2">
                                    <label class="form-check-label" for="inlineRadio2">Intereses</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <span asp-validation-for="MODEL_PRESUPUESTO.RadioOptions" class="text-danger"></span>
                                </div>
                                <br />
                                <br />
                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input asp-for="MODEL_PRESUPUESTO.PRE_NOM_PAC" placeholder="Pagos" class="form-control" autofocus />
                                            <span asp-validation-for="MODEL_PRESUPUESTO.PRE_NOM_PAC" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <input type="submit" value="Efectuar pago" class="btn btn-success btn-block">
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="form-group">
                                <label class="text-danger">@Html.DisplayFor(m => m.MODEL_PRESUPUESTO.ErrorMessage)  </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

