@model Modelo_Paginador<MOD_USUARIO>
@{
    ViewData["Title"] = "Users";
}

<div class="container p-4">
    <div class="form-group">
        <form asp-area="Users" asp-controller="Users" asp-action="Users" method="get">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Buscar" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
    <div class="form-group">
        <form action="/" method="post">
            <div class="row">
                <div class="col-md-1">
                    <a class="btn btn-primary text-white" asp-area="Users" asp-page="/Account/Register">Add</a>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @foreach (var item in Model.List)
        {
            var image = "data:image/jpg;base64," + Convert.ToBase64String(item.USER_IMAGE, 0, item.USER_IMAGE.Length);
            <div class="col-xs-6 col-md-2">
                <div class="card text-center">
                    <div class="card-header">
                        <a asp-route-id="@item.USER_ID" asp-area="Users" asp-page="/Account/Details">
                            <img class="imageUsers" src="@image" />
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <table class="tablaCursos">
                            <tbody>
                                <tr>
                                    <td>
                                        <p>@Html.DisplayFor(modeloItem => item.USER_NOMBRE)</p>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <p>@Html.DisplayFor(modeloItem => item.USER_ROL)</p>
                                    </td>
                                </tr>
                                @*<tr>
                                        <td>
                                          @if(item.)
                                        </td>
                                    </tr>*@
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>