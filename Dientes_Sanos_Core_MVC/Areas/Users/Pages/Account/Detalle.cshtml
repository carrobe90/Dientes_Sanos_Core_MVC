@page
@model DetalleModel
@{
    var imagen = "data:image/jpg;base64," + Convert.ToBase64String(Model.MODEL_USUARIO.DataUser.Image,
        0, Model.MODEL_USUARIO.DataUser.Image.Length);
    var nombre = Model.MODEL_USUARIO.DataUser.Name + " " + Model.MODEL_USUARIO.DataUser.LastName;

}
<div class="container">
    <h1>@nombre</h1>
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" >
                <div class="card-header ">
                    <img class='.imageUsersDetalles' src="@imagen" />
                </div>
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p> @Model.MODEL_USUARIO.DataUser.Name</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.MODEL_USUARIO.DataUser.Role </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @if (Model.MODEL_USUARIO.DataUser.IdentityUser.LockoutEnabled)
                                    {
                                        <p class="text-success">Disponible.</p>
                                    }
                                    else
                                    {
                                        <p class="text-danger">No disponible.</p>
                                    }

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    Información
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    RUT
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.MODEL_USUARIO.DataUser.NID</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nombre Usuario
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@nombre</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Teléfono
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.MODEL_USUARIO.DataUser.IdentityUser.PhoneNumber</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Email
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.MODEL_USUARIO.DataUser.Email</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Users" asp-page="Registro" method="post">
                                        @{
                                            var dataUsuario = JsonConvert.SerializeObject(Model.MODEL_USUARIO.DataUser);
                                        }

                                        <input type="hidden" name="dataUsuario" value="@dataUsuario" />
                                        <input type="submit" value="Editar" class="btn btn-success ">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>