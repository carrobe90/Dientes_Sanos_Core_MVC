@model Dientes_Sanos_Core_MVC.Models.MODELO_ODONTOLOGO

@{
    ViewData["Title"] = "Crear Nuevo Profesional";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Crear Nuevo Profesional</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-10">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ODONT_CODIGO" class="control-label"></label>
                    <input asp-for="ODONT_CODIGO" class="form-control" />
                    <span asp-validation-for="ODONT_CODIGO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ODONT_NOMBRE" class="control-label"></label>
                    <input asp-for="ODONT_NOMBRE" class="form-control" />
                    <span asp-validation-for="ODONT_NOMBRE" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ODONT_APELLIDO" class="control-label"></label>
                    <input asp-for="ODONT_APELLIDO" class="form-control" />
                    <span asp-validation-for="ODONT_APELLIDO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ODONT_ESPECIALIDAD" class="control-label"></label>
                    <input asp-for="ODONT_ESPECIALIDAD" class="form-control" />
                    <span asp-validation-for="ODONT_ESPECIALIDAD" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ODONT_FEC_NAC" class="control-label"></label>
                    <input asp-for="ODONT_FEC_NAC" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ODONT_ID_TITULO" class="control-label"></label>
                    <input asp-for="ODONT_ID_TITULO" class="form-control" />
                    <span asp-validation-for="ODONT_ID_TITULO" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear Profesional" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{ <partial name="_ValidationScriptsPartial"/>}
        }